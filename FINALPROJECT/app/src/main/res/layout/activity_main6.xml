<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jesusalvizo.finalproject.Main6Activity">

    <ImageView
        android:layout_height="200dp"
        app:srcCompat="@drawable/temperature"
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/timerSeekBar"
        android:visibility="invisible" />

    <Button
        android:text="Go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/controlBtn"
        tools:ignore="HardcodedText"
        android:onClick="controlTimer"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="18:00"
        android:ems="10"
        android:id="@+id/timerTextView"
        android:textAlignment="center"
        android:textSize="70sp"
        tools:ignore="HardcodedText"
        android:layout_above="@+id/controlBtn"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="190Â° Celcius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:id="@+id/textView2"
        android:textStyle="normal|bold"
        android:textColor="#000000"
        android:textSize="34sp"
        android:layout_below="@+id/timerSeekBar"
        android:layout_toEndOf="@+id/imageView2" />

    <ImageView
        app:srcCompat="@drawable/muffin"
        android:id="@+id/imageView5"
        android:layout_width="200dp"
        android:layout_height="230dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
